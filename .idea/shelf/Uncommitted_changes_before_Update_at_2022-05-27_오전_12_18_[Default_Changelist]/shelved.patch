+    public void onUserClicked(Shop shop) {
+        Intent intent = new Intent(getApplicationContext(), ChatActivity.class);
+        intent.putExtra(Constants.KEY_FLOEWRSHOP, shop);
+        startActivity(intent);
+        finish();
+    }
+
