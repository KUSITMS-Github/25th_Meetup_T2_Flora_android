<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/SettingProfile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:srcCompat="@drawable/setting_profile"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="백주연"
                    android:textSize="20dp"
                    android:fontFamily="@font/spoqahansansneo_bold"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/setting_rectangle"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>
            <ImageView
                android:id="@+id/orderlistButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="30dp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/orderlist_img"/>
            <ImageView
                android:id="@+id/reviewButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-8dp"
                app:srcCompat="@drawable/reviewbutton"/>
            <ImageView
                android:id="@+id/askButton"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_margin="30dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/ask_img"/>
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:src="@drawable/line6"
        android:adjustViewBounds="true"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="-10dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="270dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고객센터"
                android:textSize="18dp"
                android:fontFamily="@font/spoqahansansneo_medium"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="15dp"/>
            <ImageView
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:src="@drawable/line5"
                android:adjustViewBounds="true"
                android:layout_marginLeft="-30dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="환경설정"
                android:textSize="18dp"
                android:fontFamily="@font/spoqahansansneo_medium"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="15dp"/>
            <ImageView
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:src="@drawable/line5"
                android:adjustViewBounds="true"
                android:layout_marginLeft="-30dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QnA"
                android:textSize="18dp"
                android:fontFamily="@font/spoqahansansneo_medium"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="15dp"/>
            <ImageView
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:src="@drawable/line5"
                android:adjustViewBounds="true"
                android:layout_marginLeft="-30dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공지사항"
                android:textSize="18dp"
                android:fontFamily="@font/spoqahansansneo_medium"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="15dp"/>
            <ImageView
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:src="@drawable/line5"
                android:adjustViewBounds="true"
                android:layout_marginLeft="-30dp"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>