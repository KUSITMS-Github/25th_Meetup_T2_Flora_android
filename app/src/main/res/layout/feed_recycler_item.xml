<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/productClick">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardBackgroundView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp" >
            <ImageView
                android:id="@+id/flowerImage"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:src="@drawable/flower_temp1"
                android:adjustViewBounds="true">
            </ImageView>
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/heart_empty_img"
                android:adjustViewBounds="true"
                android:layout_gravity="right|bottom"
                android:layout_margin="10dp">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_temp"
                android:adjustViewBounds="true"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp" >
            </ImageView>
            <TextView
                android:id="@+id/titleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="꽃빛나다"
                android:textSize="13dp"
                android:fontFamily="@font/spoqahansansneo_medium"
                android:textColor="@color/black"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/contextTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프리지아 하늘색 꽃다발"
            android:textSize="13dp"
            android:fontFamily="@font/spoqahansansneo_regular"
            android:textColor="#8E8C94"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/discountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12%"
                android:textSize="12dp"
                android:fontFamily="@font/spoqahansansneo_medium"
                android:textColor="#FFE83A"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/priceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65,000원"
                android:textSize="13dp"
                android:fontFamily="@font/spoqahansansneo_medium"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>